<link rel='stylesheet' href='/stylesheets/style.css' />
<% if (typeof errorMessage === 'undefined') { var errorMessage = []; } %>
<% if(errorMessage.length != 0){ %>
  <div>
    <mark class="markRed">
        <strong>Warning!</strong> The form contains <%= errorMessage.length %> errors.
    </mark>
  </div>
  <div>
    <ul>
      <% for(let item of errorMessage){ %>
        <li><%= item %></li>
      <% } %>
    </ul>
  </div>
<% } %>